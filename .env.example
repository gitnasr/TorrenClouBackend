# Application Configuration
ASPNETCORE_ENVIRONMENT=Production

# Database Configuration
POSTGRES_DB=torrenclo
POSTGRES_USER=torrenclo_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# API Configuration
API_PORT=5000
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_ISSUER=TorrenClo
JWT_AUDIENCE=TorrenCloAPI
JWT_EXPIRATION_HOURS=24

# Worker Configuration
MAX_CONCURRENT_JOBS=3
MAX_CONCURRENT_UPLOADS=2

# Google Drive OAuth (Optional - only if using Google Drive)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# SMTP Configuration (Optional - for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com


